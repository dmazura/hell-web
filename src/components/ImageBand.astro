---
export interface Props {
  src: string;
  alt: string;
  loading?: "lazy" | "eager";
  class?: string;
}

const {
  src,
  alt,
  loading = "lazy",
  class: className,
} = Astro.props;
---

<img
  class:list={["section-image", className]}
  src={src}
  alt={alt}
  loading={loading}
  decoding="async"
  draggable="false"
/>
