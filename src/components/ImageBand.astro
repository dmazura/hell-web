---
export interface Props {
  src: string;
  alt: string;
  loading?: "lazy" | "eager";
  class?: string;
  zoom?: boolean;
  style?: string;
}

const {
  src,
  alt,
  loading = "lazy",
  class: className,
  zoom = true,
  style,
} = Astro.props;
---

<img
  class:list={["section-image", className]}
  src={src}
  alt={alt}
  loading={loading}
  decoding="async"
  draggable="false"
  data-zoom={zoom ? "" : undefined}
  style={style}
/>
