---
export interface Props {
  src: string;
  alt: string;
  loading?: "lazy" | "eager";
  class?: string;
}

const {
  src,
  alt,
  loading = "lazy",
  class: className,
} = Astro.props;
---

<section
  class:list={["image-band", className]}
>
  <img
    class="image-band__img"
    src={src}
    alt={alt}
    loading={loading}
    decoding="async"
    draggable="false"
  />
</section>
